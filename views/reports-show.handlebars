<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<link rel="stylesheet" href="/dashboardstyle.css">
<body class="dashbkg">
<h1 class="whiteout" align="center">Student Reports</h1>

{{#if currentUser.teacheracc}}
<hr>
<div class="container">
  <center><button class="btn btn-info newReport">New Report</button></center>

  <div class="reportPanel">
  <div class="container">
    {{> report-form}}
    <hr>

  </div>
</div><!--reportPanel-->
</div>
{{/if}}

<div style="margin-top: 50px;"></div>

{{#each reports}}
    <div id="instructions" class="paper">
      {{this.date}} <br><br>
      {{this.title}} <br><br>
      {{this.content}} <br><br>

      <div class="replydiv">
        <a class="replytext">Comment</a>

          <div class="draggable absoluteForm commentForm">
            <form method="post" action="/reports/comment">
              {{> commentform}}
            </form>
            <div class="closerDiv">
              <button class="btn btn-danger commentclose">Close</button>
            </div><!--closerdiv-->
          <center>  <p style="margin-top: 10px; margin-bottom: -20px; font-family: arial; font-size: 80%;">Drag Me</p></center>
        </div><!--commentform-->
      </div><!--reply div-->
      <div class="commentsection"><!--container that all the comments will go into as sticky notes-->
        {{#each comments}}
          {{> comment}}
        {{/each}}

      </div><!--commentsection-->

    </div>â€‹

{{/each}}



