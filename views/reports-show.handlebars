<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<link rel="stylesheet" href="/dashboardstyle.css">
<body style="" class="dashbkg">
<h1 class="whiteout" align="center">Student Reports</h1>

{{#if currentUser.teacheracc}}
<hr>
<div class="container">
  <center><button class="btn btn-info newReport">New Report</button></center>

  <div class="reportPanel">
  <div class="container">
    {{> report-form}}
    <hr>

  </div>
</div><!--reportPanel-->
</div>
<br>


{{#each reports}}
    <div id="instructions" class="paper">
      {{this.date}} <br><br>
      {{this.title}} <br><br>
      {{this.content}}


      <div class="replydiv">
        <a class="replytext">Comment</a>

        <!--Delete-->
        <form method="POST" action="/reports/{{this._id}}?_method=DELETE">
          <input type="hidden" name="reportId" value={{this._id}}>
        <button class="aabt aabtdel btn btn-danger" type="submit"><i class="glyphicon glyphicon-trash"></i></button>
        </form>

          <div class="draggable absoluteForm commentForm">
            <form method="post" action="/reports/comment">
              {{> commentform}}
            </form>
            <div class="closerDiv">
              <button class="btn btn-danger commentclose">Close</button>
            </div><!--closerdiv-->
          <center>  <p style="margin-top: 10px; margin-bottom: -20px; font-family: arial; font-size: 80%;">Drag Me</p></center>
        </div><!--commentform-->
      </div><!--reply div-->
      <div class="commentsection"><!--container that all the comments will go into as sticky notes-->
        {{#each this.comments}}
        <div style="display: flex; margin-bottom: 20px;" class="commentForm">

          {{> comment}}

        </div>
        {{/each}}

      </div><!--commentsection-->

    </div>​

{{/each}}

<!--end teacher section-->




