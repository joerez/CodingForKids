<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<link rel="stylesheet" href="/dashboardstyle.css">
<body class="dashbkg">

{{#if currentUser.firstTime}}
<div class="modelbox animated bounceInDown">
  <h1 class="whiteout" align="center">Welcome <span style="color: #ecf0f1">{{currentUser.username}}!</span></h1>
  <h2 class="whiteout" align="center">It's your first time here! Please visit the <a style="color: #ecf0f1" href="/firstvisit">Profile Builder</a> to move on!</h2>
  <a style="margin-top: 30px; margin-left: 100px; margin-right: 100px;" role="button" class="btn btn-primary" href="/firstvisit">PROFILE BUILDER</a>
</div>
{{else}}
<h1 class="whiteout" align="center">{{currentUser.firstname}}'s Dashboard!</h1>
{{/if}}

{{#if currentUser.student}}
{{#if currentUser.beginner}}
<h1 class="whiteout" align="center">Beginners Web Course</h1>

<div class="trackBox" id="sortable">
  <a target="_blank" href="https://calendly.com/joe-rezendes"><div class="square Schedule"><p align="center">Schedule</p></div></a>
  <div class="square viewreports"><p align="center">View Reports</p></div>
  {{#if currentUser.sessionFirst}}
  <div class="square entersession"><p align="center">Enter Session</p></div>
  {{else}}
  <div class="square entersession"><p align="center">Enter Session</p></div>
  {{/if}}
</div>

{{else if currentUser.intermediate}}
<h1 class="whiteout" align="center">Intermediate Web Course</h1>

<div class="trackBox" id="sortable">
  <div class="square Schedule"><p align="center"><a target="_blank" href="https://calendly.com/joe-rezendes">Schedule</p></a></div>
  <div class="square viewreports"><p align="center">View Reports</p></div>
  {{#if currentUser.sessionFirst}}
  <!--First session link with sign up info for different tools-->
  <div class="square entersession"><p align="center">Install Tools For Session</p></div>
  {{else}}
  <!--Permanent Google hangouts Link--> <!--You need to add these manually to database-->
  <div class="square entersession"><p align="center"><a href="{{currentUser.session}}">Enter Session</p></div>
  {{/if}}
</div>

{{else if currentUser.advanced}}
<h1 class="whiteout" align="center">Advanced Web Course.</h1>

<div class="trackBox" id="sortable">
  <a target="_blank" href="https://calendly.com/joe-rezendes"><div class="square Schedule"><p align="center">Schedule</p></div></a>
  <div class="square viewreports"><p align="center">View Reports</p></div>
  {{#if currentUser.sessionFirst}}
  <div class="square entersession"><p align="center">Enter Session</p></div>
  {{else}}
  <div class="square entersession"><p align="center">Enter Session</p></div>
  {{/if}}
</div>

{{else}}

<h1 class="whiteout" align="center">You are not currently enrolled in a track.</h1>

{{/if}}
{{/if}}

{{#if currentUser.teacheracc}}
<h1 class="whiteout" align="center">Teachers Desk</h1>

<div class="trackBox" id="sortable2">
  <div class="square admin"><p align="center">Admin</p></div>
  <div class="square viewstudents"><p align="center">View Students</p></div>
  <div class="square entersession"><p align="center">Enter Session</p></div>
</div>

{{/if}}






<h1 style="display: none;" align="center" id="typed" class="root1Text"></h1>

</body>
